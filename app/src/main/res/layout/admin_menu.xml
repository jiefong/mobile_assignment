<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_main4"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <Button
                android:id="@+id/button_add_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center"
                android:drawablePadding="15dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_blue"
                android:text="Add Map" />

            <Button
                android:id="@+id/button_delete_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center"
                android:drawablePadding="15dp"
                android:layout_marginBottom="16dp"
                android:text="Delete Map"
                android:background="@drawable/button_blue"/>

            <Button
                android:id="@+id/button_add_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Add Location"
                android:background="@drawable/button_blue"/>

            <Button
                android:id="@+id/button_delete_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Delete Location"
                android:background="@drawable/button_blue"/>

            <Button
                android:id="@+id/button_generate_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Generate QR Code"
                android:background="@drawable/button_blue"/>

            <Button
                android:id="@+id/button_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Change Password"
                android:background="@drawable/button_blue"/>

            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginBottom="50dp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:text="Logout"
                android:background="@drawable/button_blue"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
